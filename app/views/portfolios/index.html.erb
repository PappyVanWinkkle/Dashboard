<h1>Portfolio Page</h1>

<%= link_to "Create New Portfolio", new_portfolio_path %>

<% @portfolio.each do |portfolio| %>
   <p><%= link_to portfolio.title, portfolio_path(portfolio.id)%></p>
   <p><%= portfolio.subTitle %></p>
   <p><%= portfolio.body%></p>
   <%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil?%>
   <p><%= portfolio.text%></p>
   <%= link_to "Edit", edit_portfolio_path(portfolio.id) %>
   <%= link_to "Delete", portfolio, method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>
